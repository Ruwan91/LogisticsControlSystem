<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>AddDelivery</servlet-name>
        <servlet-class>edu.sliit.logistics_control_system.controller.AddDelivery</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddDriver</servlet-name>
        <servlet-class>edu.sliit.logistics_control_system.controller.AddDriver</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddVehicle</servlet-name>
        <servlet-class>edu.sliit.logistics_control_system.controller.AddVehicle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchDeliveryDestinationForDelivery</servlet-name>
        <servlet-class>edu.sliit.logistics_control_system.controller.SearchDeliveryDestinationForDelivery</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchVehicleTypesForAddVehicle</servlet-name>
        <servlet-class>edu.sliit.logistics_control_system.controller.SearchVehicleTypesForAddVehicle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchedAllDeliveryDetail</servlet-name>
        <servlet-class>edu.sliit.logistics_control_system.controller.SearchedAllDeliveryDetail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddDelivery</servlet-name>
        <url-pattern>/AddDelivery</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddDriver</servlet-name>
        <url-pattern>/AddDriver</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddVehicle</servlet-name>
        <url-pattern>/AddVehicle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchDeliveryDestinationForDelivery</servlet-name>
        <url-pattern>/SearchDeliveryDestinationForDelivery</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchVehicleTypesForAddVehicle</servlet-name>
        <url-pattern>/SearchVehicleTypesForAddVehicle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchedAllDeliveryDetail</servlet-name>
        <url-pattern>/SearchedAllDeliveryDetail</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
